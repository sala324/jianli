.item{
  height: 242rpx;
  
  
  padding: 40rpx 0;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #999;
  position: relative;
  border-bottom: 1rpx solid #E1E3E5;
}
.content{
  margin: 0 30rpx;
}
.item .title{
  color: #191F25;
  font-size: 32rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  width: 690rpx;
}
.item .des{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  width: 690rpx;
  margin: 20rpx 0;
  height:60rpx;
}
.info{
  display: flex;
  justify-content: space-between;
  height:32rpx;
  line-height: 32rpx;
}
.state{
  border: 1rpx solid #3197FB;
  color: #3197FB;
  width:92rpx;
  height:32rpx;
  line-height: 32rpx;
  text-align: center;
  border-radius: 32rpx;
  display: inline-block;
  font-size: 20rpx;
}
.state.gray{
  background: #CAD0D7;
  color: #fff;
  border: none;
}
.item .remove{
  width: 160rpx;  
  height: 100%;  
  background-color: red; 
  color: white; 
  position: absolute;  
  top: 0;  
  right: -160rpx;  
  display: flex;  
  justify-content: center;  
  align-items: center;
  font-size:32rpx;
}
.code{
  float:right;
  color:#999;
  font-size:24rpx;
}