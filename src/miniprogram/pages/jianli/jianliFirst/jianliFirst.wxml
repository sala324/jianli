<view class="lineItem">
  <text class="name">{{info.name}}</text>
  <text class="detail">{{info.code}}</text>
</view>
<view class="lineItem">
  <text class="name">天气</text>
  <input class="detail" value="{{info.weather_day}}" bindinput="changeItem" data-name="weather_day"></input>
</view>
<view class="lineItem">
  <text class="name">最高气温</text>
  <input class="detail" value="{{info.temperature_high}}" bindinput="changeItem" data-name="temperature_high"></input>
</view>
<view class="lineItem">
  <text class="name">最低气温</text>
  <input class="detail" value="{{info.temperature_low}}" bindinput="changeItem" data-name="temperature_low"></input>
</view>
<view class="lineItem">
  <text class="name">巡视时间</text>
  <picker mode="date" class="detail" value="{{info.open_date}}" start="2015-09-01" end="{{dateEnd}}" bindchange="bindDateChange">
    <view class="picker" wx:if="{{!info.open_date}}">
      请选择 >
    </view>
    <view wx:else>{{info.open_date}}</view>
  </picker>
</view>

<view class="jilu">
  <text class="name">日志详情</text>
  <textarea value="{{info.note}}" bindinput="changeItem" data-name="note" maxlength="500" placeholder="请输入"></textarea>
</view>
<voice bind:myevent="setGaiyao" bind:myevent2="nextStep" authority="{{authority}}"></voice>




