.wrap{
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  background:rgba(242,244,245,1);
}
.navWrap{
  width:620rpx;
  height:145rpx;
  box-sizing: border-box;
  display: inline-flex;
  align-items: center;
  justify-content: space-evenly;
}
.navWrap .navItem{
  border-radius:25px;
  color: #999999;
  font-size: 24rpx;
  text-align: center;
}
.navWrap .navItem.active{
  color: rgba(49,151,251,1)
}
.navWrap .navItem .num{
  display: block;
  border: 1rpx solid #C1C1C1;
  color: #999999;
  font-size: 30rpx;
  width: 50rpx;
  height:50rpx;
  border-radius: 50%;
  margin-right: 8rpx;
  margin:0 auto 15rpx;
}
.navWrap .navItem.active .num{
  border: none;
  background:rgba(49,151,251,1);
  color: #fff;
  
  /* font-weight: bold; */
}
.nextStep{
  display: inline-block;
  width: 130rpx;
  height: 80rpx;
  border-radius: 25rpx 0 0 25rpx;
  border: 1rpx solid #3197FB;
  box-sizing: border-box;
  background: #fff;
  color: #3197FB;
  font-size: 28rpx;
  text-align: center;
  line-height: 80rpx;
}