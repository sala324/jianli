.item{
  width:750rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  background: #fff;
  position: relative;
}
.item .itemLogo{
  width: 88rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  background:#3197FB;
  border-radius: 50%;
  color: #fff;
  font-size: 46rpx;
  margin-left: 30rpx;
}
.item .itemInfo{
  flex: 1;
  height: 100%;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #E1E3E5;
  position: relative;
}
.item .itemInfo.nobd{
  border-bottom: none;
}
.item .itemInfo .itemTop{
  padding-top: 20rpx;
  display: flex;
  justify-content: space-between;
  padding-right: 30rpx;
}
.item .itemInfo .itemTop .itemTitle{
  font-size: 32rpx;
  color: #191F25;
  font-weight:500;
}
.item .itemInfo .itemTop .itemState{
  display: inline-block;
  width:92rpx;
  height:32rpx;
  line-height: 32rpx;
  border:1rpx solid rgba(255,177,115,1);
  border-radius:15rpx;
  font-size: 20rpx;
  color: #FFB174;
  text-align: center;
}
.item .itemInfo .itemTop .itemState.gray{
  background: #C9CFD7;
  color: #fff;
  border:none;
}
.item .remove{
  width: 160rpx;  
  height: 100%;  
  background-color: red; 
  color: white; 
  position: absolute;  
  top: 0;  
  right: -160rpx;  
  display: flex;  
  justify-content: center;  
  align-items: center;
}
.itemDate{
  font-size: 24rpx;
  color: #999;
}