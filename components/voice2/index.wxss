.voiceBtnWrap{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 1;
  height: 300rpx;
  box-sizing: border-box;
  text-align: center;
}
.voiceBtnBox{
  height: 300rpx;
}
.voice,.nextBtn{
  width: 400rpx;
  border-radius: 20rpx;
  background:#3197FB;
  color: #fff;
  margin: 40rpx auto;
  padding: 20rpx;
  font-size: 32rpx;
}
.voice.talking{
  color: #3197FB;
  border: 3rpx solid #3197FB;
  background: rgba(0,0,0,0);
}
.mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.3);
  z-index: 3;
}
.mask .wrap{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 400rpx;
  height: 200rpx;
  background: #fff;
  margin:auto;
  padding: 30rpx 0;
  text-align: center;
  box-sizing: border-box;
  border-radius: 20rpx;
}
.mask .wrap .title{
  font-size: 30rpx;
  margin-bottom: 24rpx;
}